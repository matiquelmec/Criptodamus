# CRYPTOTRADING AI ADVISOR - CONFIGURACIÓN DE EJEMPLO
# IMPORTANTE: Copiar este archivo a .env y configurar con tus propias keys
# NUNCA commitear el archivo .env real al repositorio

# ================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================
NODE_ENV=development
PORT=3001

# ================================
# CONFIGURACIÓN DE RISK MANAGEMENT
# ================================
DEFAULT_MAX_RISK_PER_TRADE=2
DEFAULT_MAX_LEVERAGE=20
DEFAULT_MIN_RR_RATIO=2
MAX_CONSECUTIVE_LOSSES=3
EMERGENCY_STOP_PERCENT=20

# ================================
# CONFIGURACIÓN DE TRADING
# ================================
BREAKEVEN_PROFIT_THRESHOLD=40
ANALYSIS_INTERVAL=900000
TOP_CRYPTOS_COUNT=50
MIN_CONFLUENCE_SCORE=70  # Bajado de 75 para más señales

# ================================
# API KEYS - EXCHANGES (REEMPLAZAR CON TUS KEYS)
# ================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# ================================
# API KEYS - DATA PROVIDERS
# ================================
CMC_API_KEY=your_coinmarketcap_api_key_here

# ================================
# NOTIFICACIONES
# ================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ================================
# BASE DE DATOS
# ================================
MONGODB_URI=mongodb://localhost:27017/cryptotrading

# ================================
# CONFIGURACIÓN DE LOGGING
# ================================
LOG_LEVEL=info
LOGS_DIR=./logs

# ================================
# CONFIGURACIÓN DE SEGURIDAD
# ================================
JWT_SECRET=generate_a_secure_random_string_here
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ================================
# MÚLTIPLES BOTS TELEGRAM (OPCIONAL)
# ================================
TELEGRAM_BOT_TOKEN_PRIMARY=your_primary_bot_token_here
TELEGRAM_CHAT_ID_PRIMARY=your_primary_chat_id_here

TELEGRAM_BOT_TOKEN_SECONDARY=your_secondary_bot_token_here
TELEGRAM_CHAT_ID_SECONDARY=your_secondary_chat_id_here

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================
DEBUG_MODE=true
USE_MOCK_APIS=false
TEST_DATA_SEED=12345